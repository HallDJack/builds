{{#if @project.installWithEmberCLI}}
  <h4 class="project-name">Using {{@project.projectName}} {{@channel}} builds with Ember CLI</h4>
  <div>
    <pre><code>{{{printf @project.installWithEmberCLI @project.lastRelease}}}</code></pre>
    {{#if @project.lastReleaseChangelogUrl}}
      <p>
        Read the <a class="debug" href={{@project.lastReleaseChangelogUrl}}>changelog</a>
        for {{@project.projectName}} {{@project.lastRelease}}.
      </p>
    {{else if @project.lastReleaseTestUrl}}
        <p>
        <a class="debug" href={{@project.lastReleaseTestUrl}} target="_blank">Run the tests</a> for {{@project.projectName}} ||| {{@project.lastRelease}} in your browser.
        </p>
    {{else}}
      <p></p>
    {{/if}}
  </div>
{{/if}}
