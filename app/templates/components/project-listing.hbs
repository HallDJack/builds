<h2 class="project-name">{{capitalize channel}} Channel</h2>

<p>{{channelDescription}}</p>

{{#if model.filesPresent}}
  {{#each projects as |project|}}
    {{#if project.isEmberBeta}}
      {{yield project}}
    {{/if}}
    <div class="ember-cli-usage">
      {{ember-cli-usage
          project=project
          channel=channel}}
    </div>
  {{/each}}
  <div class="files-table">
    <h4 class="project-name">{{channel}} Channel Downloads</h4>
    <table class="table">
      <thead>
        <tr>
          <th>File</th>
          <th>Modified</th>
          <th>Quick Copy</th>
        </tr>
      </thead>
      <tbody>
        {{#each projects as |project|}}
          {{files-table
              project=project
              includeReleasesInFileList=includeReleasesInFileList}}
        {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <br/>
  {{#if model.isLoading}}
    <p class="loading-spinner">
      Loading...<br/><br/>
      <img src="/images/ajax-loader.gif" width="31" height="31" />
    </p>
  {{else}}
    <p>There are currently no builds for {{model.title}}. Please check back soon.</p>
  {{/if}}
{{/if}}
